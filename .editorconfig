# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_size = 2
indent_style = space
charset = utf-8

# Matches multiple files with brace expansion notation
# Set default charset
[*.{ts}]
indent_size = 2

[*.{html}]
indent_size = 2

# 4 space indentation
[*.py]
indent_size = 4

# 4 space indentation
[*.rs]
indent_size = 4

[Makefile]
indent_size = 4
indent_style = tab

# Matches the exact files either package.json or .travis.yml
[{package.json,.travis.yml}]
indent_size = 2

